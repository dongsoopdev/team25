<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shop.mapper.UserMapper">
    <insert id="save">
        insert into user values (DEFAULT, #{userId}, #{name}, #{pwd}, #{email}, ${address}, #{tel}, default, default)
    </insert>

    <select id="findAll" resultType="com.shop.domain.User">
        select * from user
    </select>

    <select id="findById" resultType="com.shop.domain.User">
        select * from user where id = #{id}
    </select>

    <select id="findByUserId" resultType="com.shop.domain.User">
        select * from user where userId = #{userId}
    </select>

    <select id="getLatestUser" resultType="com.shop.domain.User">
        select * from user order by id desc limit 0,1
    </select>

    <update id="update">
        update user set name=#{name}, pwd=#{pwd}, address=#{address}, tel=#{tel} where id = #{id}
    </update>

</mapper>